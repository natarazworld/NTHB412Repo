<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class  name="com.nt.entity.LibraryMembership"  table="OTOPK_LIBRARYMEMBERSHIP">
       <id name="lid">
         <generator class="foreign">
            <param name="property">studentDetails</param>  <!-- HAS -A property name -->
         </generator>
       </id>
       <property name="type" length="15"/>
       <property name="doj"/>
        <one-to-one name="studentDetails" class="com.nt.entity.Student" cascade="all" lazy="proxy"/>
    </class>    
</hibernate-mapping>